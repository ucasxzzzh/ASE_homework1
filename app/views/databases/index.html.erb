<p id="notice"><%= notice %></p>

<h1>数据库</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @databases.each do |database| %>
      <tr>
        <td><%= database.name %></td>
        <td><%= database.sex %></td>
        <td><%= link_to '详细', database %></td>
        <td><%= link_to '修改', edit_database_path(database) %></td>
        <td><%= link_to '删除', database, method: :delete, data: { confirm: '确定删除这条数据吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

